#!/usr/bin/env ruby

opts = ARGV.getopts('', 'host:localhost', 'mount:__web_console', 'proto:http')
if ARGV.empty?
  puts 'web_console_auth [--host] [--mount] [--proto] <port>'
else
  url = "#{opts['proto']}://#{opts['host']}:#{ARGV.first}/#{opts['mount']}/auth/secret"
  system "curl -s -X POST #{url}"
end
